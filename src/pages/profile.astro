import clientPromise from "../lib/mongodb";
import { ObjectId } from "mongodb";
import "../styles/global.css";

const userIdCookie = Astro.cookies.get("user_id");
if (!userIdCookie) return Astro.redirect("/login");

const client = await clientPromise;
const db = client.db("frog_app");
const users = db.collection("users");

let user;
try {
    user = await users.findOne({ _id: new ObjectId(userIdCookie.value) });
} catch (e) {
    return Astro.redirect("/login");
}

if (!user) return Astro.redirect("/login");

let message = "";
let error = "";

if (Astro.request.method === "POST") {
    const formData = await Astro.request.formData();
    const action = formData.get("action");

    if (action === "update_profile") {
        const displayName = formData.get("displayName")?.toString().trim();
        const bio = formData.get("bio")?.toString().trim();
        const favoriteEmoji =
            formData.get("favoriteEmoji")?.toString().trim() || "üê∏";

        await users.updateOne(
            { _id: user._id },
            {
                $set: {
                    displayName: displayName || user.username,
                    bio: bio || "",
                    favoriteEmoji: favoriteEmoji,
                    updatedAt: new Date(),
                },
            },
        );

        message = "Profil mis √† jour avec succ√®s ! üåä";
        user = await users.findOne({ _id: user._id });
    }
}

const stats = {
    favorites: user.favorites?.length || 0,
    friends: user.friends?.length || 0,
    memberSince: user.createdAt
        ? new Date(user.createdAt).toLocaleDateString("fr-FR", {
              month: "long",
              year: "numeric",
          })
        : "Inconnue",
};

const emojiOptions = [
    "üê∏",
    "üê¢",
    "ü¶é",
    "üêä",
    "üåä",
    "üíß",
    "ü©µ",
    "‚ú®",
    "üåü",
