      function createCelebration() {
        const container = document.getElementById("celebration-container");
        if (!container) return;
        container.innerHTML = "";

        const emojis = [
          "üíô",
          "üê∏",
          "‚ú®",
          "üåü",
          "üí´",
          "üéâ",
          "üåä",
          "üíß",
          "ü©µ",
          "‚≠ê",
        ];
        const colors = [
          "#06b6d4",
          "#0ea5e9",
          "#38bdf8",
          "#7dd3fc",
          "#22d3ee",
          "#67e8f9",
          "#a5f3fc",
        ];

        for (let burst = 0; burst < 3; burst++) {
          setTimeout(() => {
            for (let i = 0; i < 30; i++)
              createConfetti(container, colors, i * 20);
            for (let i = 0; i < 12; i++)
              createEmojiParticle(container, emojis, i * 50);
            for (let i = 0; i < 8; i++) createFloatingHeart(container, i * 100);
          }, burst * 150);
        }
        createCenterBurst(container);
        setTimeout(() => {
          container.innerHTML = "";
        }, 4000);
      }

      function createConfetti(container, colors, delay) {
        const confetti = document.createElement("div");
        const size = Math.random() * 10 + 5;
        const color = colors[Math.floor(Math.random() * colors.length)];
        const startX = window.innerWidth / 2 + (Math.random() - 0.5) * 100;
        const startY = window.innerHeight / 2;
        const angle = Math.random() * Math.PI * 2;
        const velocity = Math.random() * 400 + 200;
        const endX = startX + Math.cos(angle) * velocity;
        const endY = startY + Math.sin(angle) * velocity - 100;
        const rotation = Math.random() * 720 - 360;

        confetti.style.cssText = `
          position: absolute; width: ${size}px; height: ${size}px; background: ${color};
          border-radius: ${Math.random() > 0.5 ? "50%" : "2px"}; left: ${startX}px; top: ${startY}px;
          opacity: 1; transform: rotate(0deg); animation: confetti-burst 1s ease-out ${delay}ms forwards;
          --end-x: ${endX - startX}px; --end-y: ${endY - startY}px; --rotation: ${rotation}deg;
        `;
        container.appendChild(confetti);
      }

      function createEmojiParticle(container, emojis, delay) {
        const particle = document.createElement("div");
        const emoji = emojis[Math.floor(Math.random() * emojis.length)];
        const startX = window.innerWidth / 2;
        const startY = window.innerHeight / 2;
        const angle = Math.random() * Math.PI * 2;
        const distance = Math.random() * 300 + 150;
        const scale = Math.random() * 0.5 + 0.8;

        particle.style.cssText = `
          position: absolute; font-size: ${24 * scale}px; left: ${startX}px; top: ${startY}px;
          opacity: 1; transform: scale(0); animation: emoji-burst 1.2s ease-out ${delay}ms forwards;
          --end-x: ${Math.cos(angle) * distance}px; --end-y: ${Math.sin(angle) * distance - 50}px;
        `;
        particle.textContent = emoji;
        container.appendChild(particle);
      }

      function createFloatingHeart(container, delay) {
        const heart = document.createElement("div");
        heart.style.cssText = `
          position: absolute; font-size: ${Math.random() * 20 + 15}px;
          left: ${Math.random() * window.innerWidth}px; bottom: -50px;
          opacity: 0; animation: float-up 2.5s ease-out ${delay}ms forwards;
        `;
        heart.textContent = "üíô";
        container.appendChild(heart);
      }

      function createCenterBurst(container) {
        const burst = document.createElement("div");
        burst.style.cssText = `
          position: absolute; left: ${window.innerWidth / 2}px; top: ${window.innerHeight / 2}px;
          width: 0; height: 0; border-radius: 50%;
          background: radial-gradient(circle, rgba(6, 182, 212, 0.6) 0%, transparent 70%);
          transform: translate(-50%, -50%); animation: center-burst 0.6s ease-out forwards;
        `;
        container.appendChild(burst);
      }
    </script>

    <style is:global>
      @keyframes confetti-burst {
        0% {
          opacity: 1;
          transform: translate(0, 0) rotate(0deg) scale(1);
        }
        100% {
          opacity: 0;
          transform: translate(var(--end-x), var(--end-y))
            rotate(var(--rotation)) scale(0.5);
        }
      }
      @keyframes emoji-burst {
        0% {
          opacity: 1;
          transform: translate(0, 0) scale(0) rotate(0deg);
        }
        20% {
          transform: translate(
              calc(var(--end-x) * 0.2),
              calc(var(--end-y) * 0.2)
